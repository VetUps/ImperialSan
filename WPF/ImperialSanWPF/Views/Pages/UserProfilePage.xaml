<Page x:Class="ImperialSanWPF.Views.Pages.UserProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImperialSanWPF.Views.Pages"
      xmlns:controls="clr-namespace:ImperialSanWPF.Views.Controls"
      xmlns:conv="clr-namespace:ImperialSanWPF.Utils" 
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Background="#F2F2F2"
      Title="Корзина">

    <Page.Resources>
        <conv:CurrentTabToVisibilityConverter x:Key="CurrentTabToVisibilityConverter"/>

        <Style x:Key="TabButtonStyle" BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="Button">
            <Setter Property="Background" Value="#F2F2F2"/>
            <Setter Property="Foreground" Value="#656B72"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Focusable" Value="False"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF7F2"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="#FF7028"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="600*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="2"
              Grid.Column="1"
              Margin="150 50"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Top">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderThickness="1"
                    BorderBrush="#E3E3E3"
                    CornerRadius="4"
                    Margin="0, 0, 15, 0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top">
                <StackPanel Margin="30">
                    <Image Source="/Resources/Images/default_user_avatar.jpg" 
                           Width="100" 
                           Height="100"
                           Margin="0, 0, 0, 20">
                        <Image.Clip>
                            <EllipseGeometry Center="50,50" RadiusX="40" RadiusY="40"/>
                        </Image.Clip>
                    </Image>

                    <TextBlock FontSize="18"
                               Foreground="#151716"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               TextWrapping="Wrap"
                               TextTrimming="WordEllipsis"
                               MaxWidth="300">
                        <Run Text="{Binding User.Surname}"/>
                        <Run Text="{Binding User.Name}"/>
                        <Run Text="{Binding User.Patronymic}"/>
                    </TextBlock>

                    <TextBlock Text="{Binding User.Email}"
                               FontSize="15"
                               Foreground="#7B7B7B"
                               HorizontalAlignment="Center"/>

                    <TextBlock x:Name="redactUserProfileButton"
                               PreviewMouseLeftButtonDown="redactUserProfileButton_PreviewMouseLeftButtonDown"
                               Text="Редактировать профиль"
                               FontSize="15"
                               Foreground="#FF7028"
                               HorizontalAlignment="Center"
                               Cursor="Hand"
                               Margin="0, 20, 0, 0"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                    BorderThickness="1"
                    BorderBrush="#E3E3E3"
                    Background="White"
                    CornerRadius="4"
                    Margin="15, 0, 0, 0">

                <Grid Margin="20, 30"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="myOrdersTabButton"
                                Grid.Column="0"
                                Content="Мои заказы"
                                Style="{StaticResource TabButtonStyle}"
                                Click="myOrdersTabButton_Click"
                                Margin="0, 0, 5, 0"/>

                        <Button x:Name="allOrdersTabButton"
                                Grid.Column="1"
                                Content="Заказы пользователей"
                                Style="{StaticResource TabButtonStyle}"
                                Click="allOrdersTabButton_Click"
                                Margin="0, 0, 5, 0"/>

                    </Grid>

                    <Grid Grid.Row="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Visibility="{Binding CurrentTab, 
                                      Converter={StaticResource CurrentTabToVisibilityConverter}, 
                                      ConverterParameter=Мои заказы}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="31*"/>
                            <ColumnDefinition Width="239*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Мои заказы"
                                   Grid.Row="0"
                                   FontSize="32"
                                   Foreground="#151716"
                                   Margin="0, 0, 0, 15" Grid.ColumnSpan="2"/>

                        <Grid Grid.Row="1" Grid.ColumnSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid x:Name="HeaderGrid" 
                                  Grid.Row="0"
                                  Height="30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="110"/>
                                </Grid.ColumnDefinitions>

                                <Grid.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="#7B7B7B"/>
                                    </Style>
                                </Grid.Resources>

                                <TextBlock Text="Дата" Grid.Column="0"/>
                                <TextBlock Text="Номер" Grid.Column="1"/>
                                <TextBlock Text="Товары" Grid.Column="2"/>
                                <TextBlock Text="Статус" Grid.Column="3"/>
                                <TextBlock Text="Итого" Grid.Column="4"/>
                                <TextBlock Text="Действия" Grid.Column="5"/>
                            </Grid>

                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                          Grid.Row="1"
                                          Margin="0,10,0,0">
                                <ItemsControl ItemsSource="{Binding UserOrders}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderThickness="0, 0, 0, 1"
                                                    BorderBrush="#ECECEC"
                                                    Margin="0, 0, 0, 15">
                                                <controls:OrderControl Margin="0, 0, 0, 15"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="1"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Top"
                          Visibility="{Binding CurrentTab, 
                                      Converter={StaticResource CurrentTabToVisibilityConverter}, 
                                      ConverterParameter=Заказы пользователей}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="31*"/>
                            <ColumnDefinition Width="239*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Заказы пользователей"
                                   Grid.Row="0"
                                   FontSize="32"
                                   Foreground="#151716"
                                   Margin="0, 0, 0, 15" Grid.ColumnSpan="2"/>

                        <Grid Grid.Row="1" Grid.ColumnSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid x:Name="HeaderGrid2" 
                                  Grid.Row="0"
                                  Height="30">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="110"/>
                                </Grid.ColumnDefinitions>

                                <Grid.Resources>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="FontSize" Value="14"/>
                                        <Setter Property="Foreground" Value="#7B7B7B"/>
                                    </Style>
                                </Grid.Resources>

                                <TextBlock Text="Дата" Grid.Column="0"/>
                                <TextBlock Text="Номер" Grid.Column="1"/>
                                <TextBlock Text="Товары" Grid.Column="2"/>
                                <TextBlock Text="Статус" Grid.Column="3"/>
                                <TextBlock Text="Итого" Grid.Column="4"/>
                                <TextBlock Text="Действия" Grid.Column="5"/>
                            </Grid>

                            <ScrollViewer VerticalScrollBarVisibility="Auto" 
                                          Grid.Row="1"
                                          Margin="0,10,0,0">
                                <ItemsControl ItemsSource="{Binding AllOrders}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderThickness="0, 0, 0, 1"
                                                    BorderBrush="#ECECEC"
                                                    Margin="0, 0, 0, 15">
                                                <controls:OrderControl Margin="0, 0, 0, 15"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Grid>

            </Border>

        </Grid>
    </Grid>
</Page>
