<Page x:Class="ImperialSanWPF.Views.Pages.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImperialSanWPF.Views.Pages"
      xmlns:conv="clr-namespace:ImperialSanWPF.Utils" xmlns:local1="clr-namespace:ImperialSanWPF.Views.Controllers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Каталог" Background="White">

    <Page.Resources>
        <conv:CurrentPageBackgroundConverter x:Key="CurrentPageBackgroundConverter"/>
        <conv:CurrentPageFontWeightConverter x:Key="CurrentPageFontWeightConverter"/>
        <conv:EmptyCatalogVisivilityConverter x:Key="EmptyCatalogVisivilityConverter"/>
    </Page.Resources>

    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="600*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ItemsControl x:Name="categoriesHistoryItemsControl"
                      Grid.Row="0"
                      Grid.Column="1"
                      ItemsSource="{Binding CategoriesHistory}"
                      HorizontalAlignment="Left">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="{Binding CategoryTitle}"
                                CommandParameter="{Binding CategoryId}"
                                Margin="1"
                                Height="30"
                                BorderThickness="0"
                                Background="Transparent"
                                Foreground="#7B7B7B"
                                FontSize="14"
                                Click="CategoryHistoryButton_Click"/>

                        <TextBlock Text=">"
                                   Foreground="#7B7B7B"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl x:Name="categoriesItemsContorl"
                      Grid.Row="1"
                      Grid.Column="1"
                      ItemsSource="{Binding AvailableCategories}"
                      HorizontalAlignment="Left">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding CategoryTitle}"
                            CommandParameter="{Binding CategoryId}"
                            Margin="5"
                            Padding="5, 10, 5, 10"
                            Height="50"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="#FE5B00"
                            FontSize="18"
                            Click="CategoryButton_Click"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <Grid Grid.Row="2"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="300*"/>
                <RowDefinition Height="45*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150*"/>
                <ColumnDefinition Width="500*"/>
            </Grid.ColumnDefinitions>
            
            <ItemsControl x:Name="currnetProudctsItemsControl"
                          Grid.Row="0"
                          Grid.Column="1"
                          ItemsSource="{Binding CurrentProducts}"
                          Visibility="{Binding CurrentProducts, 
                                       Converter={StaticResource EmptyCatalogVisivilityConverter}}"
                          HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local1:ProductControl/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <ItemsControl x:Name="paginationItemsItemsControl" 
                          Grid.Row="1"
                          Grid.Column="1"
                          ItemsSource="{Binding PaginationItems}"
                          HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding DisplayText}"
                                Margin="2"
                                Width="50"
                                Height="50"
                                Click="PageButton_Click"
                                Tag="{Binding PageNumber}"
                                BorderBrush="Gray"
                                BorderThickness="1">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="FontWeight" Value="Normal"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEllipsis}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderThickness" Value="0"/>
                                        </DataTrigger>

                                        <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                            <Setter Property="Background" Value="LightBlue"/>
                                            <Setter Property="FontWeight" Value="Bold"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock x:Name="emptyProudctsTextBlock" 
                       Grid.Row="0"
                       Grid.Column="1"
                       Visibility="{Binding CurrentProducts, 
                                    Converter={StaticResource EmptyCatalogVisivilityConverter},
                                    ConverterParameter=Invert}"
                       Text="Таких товаров нет"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
