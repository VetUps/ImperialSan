<Page x:Class="ImperialSanWPF.Views.Pages.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImperialSanWPF.Views.Pages" 
      xmlns:controls="clr-namespace:ImperialSanWPF.Views.Controllers"
      xmlns:conv="clr-namespace:ImperialSanWPF.Utils" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Каталог" Background="White">

    <Page.Resources>
        <conv:CurrentPageBackgroundConverter x:Key="CurrentPageBackgroundConverter"/>
        <conv:CurrentPageFontWeightConverter x:Key="CurrentPageFontWeightConverter"/>
        <conv:EmptyCollectionConverter x:Key="EmptyCatalogVisivilityConverter"/>
    </Page.Resources>

    <Grid ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="600*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ItemsControl x:Name="categoriesHistoryItemsControl"
                      Grid.Row="0"
                      Grid.Column="1"
                      ItemsSource="{Binding CategoriesHistory}"
                      HorizontalAlignment="Left">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="{Binding CategoryTitle}"
                                CommandParameter="{Binding CategoryId}"
                                Height="30"
                                BorderThickness="0"
                                Background="Transparent"
                                Foreground="#7B7B7B"
                                FontSize="14"
                                Click="CategoryHistoryButton_Click"/>

                        <TextBlock Text=">"
                                   Foreground="#7B7B7B"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="14"/>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ItemsControl x:Name="categoriesItemsContorl"
                      Grid.Row="1"
                      Grid.Column="1"
                      ItemsSource="{Binding AvailableCategories}"
                      HorizontalAlignment="Left">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Button Content="{Binding CategoryTitle}"
                            CommandParameter="{Binding CategoryId}"
                            Margin="5"
                            Padding="5, 10, 5, 10"
                            Height="50"
                            BorderThickness="0"
                            Background="Transparent"
                            Foreground="#FE5B00"
                            FontSize="18"
                            Click="CategoryButton_Click"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <ComboBox x:Name="sortComboBox"
                  ItemsSource="{Binding SortItems}"
                  SelectionChanged="sortComboBox_SelectionChanged"
                  SelectedIndex="0"
                  Grid.Column="1"
                  Grid.Row="1"
                  HorizontalAlignment="Right">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding DisplayText}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <Grid Grid.Row="2"
              Grid.Column="1"
              ShowGridLines="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="175*"/>
                <ColumnDefinition Width="500*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="300*"/>
                <RowDefinition Height="45*"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0"
                          Grid.Column="1"
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled">

                <ItemsControl x:Name="currnetProudctsItemsControl"
                              ItemsSource="{Binding CurrentProducts}"
                              Visibility="{Binding CurrentProducts, 
                                           Converter={StaticResource EmptyCatalogVisivilityConverter}}"
                              HorizontalAlignment="Center">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"
                                       Width="780"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <controls:ProductControl Height="350"
                                                   Width="250"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <ItemsControl x:Name="paginationItemsItemsControl"
                          Grid.Row="1"
                          Grid.Column="1"
                          ItemsSource="{Binding PaginationItems}"
                          HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Content="{Binding DisplayText}"
                                Margin="2"
                                Width="50"
                                Height="50"
                                FontSize="16"
                                Click="PageButton_Click"
                                Tag="{Binding PageNumber}">

                            <Button.Style>
                                <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="Button">
                                    <Setter Property="Background" Value="#F2F2F2"/>
                                    <Setter Property="Foreground" Value="#656B72"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="BorderBrush" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Focusable" Value="False"/>

                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsEllipsis}" Value="True">
                                            <Setter Property="IsEnabled" Value="False"/>
                                        </DataTrigger>

                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#E4E4E4"/>
                                        </Trigger>

                                        <DataTrigger Binding="{Binding IsCurrent}" Value="True">
                                            <Setter Property="Background" Value="#FFF7F2"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="BorderBrush" Value="#FF7028"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <TextBlock x:Name="emptyProudctsTextBlock"
                       Grid.Row="0"
                       Grid.Column="1"
                       Visibility="{Binding CurrentProducts, 
                                    Converter={StaticResource EmptyCatalogVisivilityConverter},
                                    ConverterParameter=Invert}"
                       Text="Таких товаров нет"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Page>
