<Page x:Class="ImperialSanWPF.Views.Pages.SuccessOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImperialSanWPF.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Background="#F2F2F2"
      Title="Заказ оформлен">

    <Grid>
        <Border BorderThickness="1"
                BorderBrush="#E3E3E3"
                Background="White"
                CornerRadius="4"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="800"
                Height="400">

            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center">

                <Image Source="/Resources/Images/success_chekuot.png"
                       Height="80"
                       Width="80"
                       Margin="0, 0, 0, 15"/>

                <TextBlock Text="Заказ оформлен"
                           HorizontalAlignment="Center"
                           FontSize="32"
                           Foreground="#151716"/>
                <TextBlock HorizontalAlignment="Center">
                    <Run Text="Вы можете найти его в своём"
                         FontSize="15"
                         Foreground="#B9BABA"/>
                    <Run x:Name="toProfileRun"
                         Text="личном кабинете"
                         FontSize="15"
                         Foreground="#FF7028"
                         Cursor="Hand"
                         PreviewMouseLeftButtonDown="toProfileRun_PreviewMouseLeftButtonDown"/>
                    <Run Text="."
                         FontSize="15"
                         Foreground="#B9BABA"/>
                </TextBlock>

                <Button x:Name="continuePurchasesButton" 
                        Click="continuePurchasesButton_Click"
                        Content="Продолжить покупки"
                        HorizontalAlignment="Center"
                        Margin="0, 20, 0, 0"
                        Foreground="White"
                        Background="#FF7028"
                        Height="44"
                        FontSize="16" 
                        FontWeight="Bold" 
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
