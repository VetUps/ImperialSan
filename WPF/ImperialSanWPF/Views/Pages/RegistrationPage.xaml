<Page x:Class="ImperialSanWPF.Views.Pages.RegistrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImperialSanWPF.Views.Pages"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:conv="clr-namespace:ImperialSanWPF.Utils" 
      mc:Ignorable="d" 
      d:DesignHeight="1010" d:DesignWidth="1920"
      Title="RegistrationPage">

    <Page.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:BoolToVisibilityInvertedConverter x:Key="BoolToVisibilityInvertedConverter"/>
        <conv:BoolToEyeIconConverter x:Key="BoolToEyeIconConverter"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="50*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="1" 
                    Grid.Column="1" 
                    Orientation="Vertical" 
                    Background="White" 
                    Margin="0,23,0,23">
            <Image Source="/Resources/Images/logo.png" 
                   Height="80" 
                   Width="80"/>
            <TextBlock Text="Регистрация" 
                       FontSize="28" 
                       HorizontalAlignment="Center" 
                       Margin="10"/>
            <TextBox x:Name="emailTextBox"
                     materialDesign:HintAssist.Hint="Введите почту" 
                     materialDesign:HintAssist.Foreground="#7B7B7B"
                     materialDesign:TextFieldAssist.UnderlineBrush="#FF7028"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="16" 
                     BorderBrush="#7B7B7B"
                     Foreground="#7B7B7B"
                     Margin="80,10,80,10"
                     MaxLength="100"/>

            <TextBlock Text="Допустимые символы: a-zA-Z0-9!@#$%^*_+-=|?"
                       Foreground="#7B7B7B"
                       Margin="80,10,80,0"/>

            <Grid Margin="80,10,80,10">
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             materialDesign:HintAssist.Hint="Пароль" 
                             materialDesign:HintAssist.Foreground="#7B7B7B"
                             materialDesign:TextFieldAssist.UnderlineBrush="#FF7028"
                             FontSize="16" 
                             Foreground="#7B7B7B"
                             materialDesign:TextFieldAssist.HasFilledTextField="True"
                             materialDesign:TextFieldAssist.TrailingIcon="Eye"
                             PasswordChanged="PasswordBox_PasswordChanged"
                             Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVisibilityInvertedConverter}}"/>

                <TextBox x:Name="VisiblePasswordBox"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Пароль" 
                         materialDesign:HintAssist.Foreground="#7B7B7B"
                         materialDesign:TextFieldAssist.UnderlineBrush="#FF7028"
                         FontSize="16" 
                         Foreground="#7B7B7B"
                         materialDesign:TextFieldAssist.HasFilledTextField="True"
                         materialDesign:TextFieldAssist.TrailingIcon="Eye"
                         Text="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <Button Style="{StaticResource MaterialDesignToolButton}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="30" Height="30"
                        Click="TogglePasswordVisibility_Click">
                    <materialDesign:PackIcon Kind="{Binding IsPasswordVisible, Converter={StaticResource BoolToEyeIconConverter}}"/>
                </Button>
            </Grid>

            <Grid Margin="80,10,80,10">
                <PasswordBox x:Name="RepeatPasswordBox"
                             Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                             materialDesign:HintAssist.Hint="Повторите пароль" 
                             materialDesign:HintAssist.Foreground="#7B7B7B"
                             materialDesign:TextFieldAssist.UnderlineBrush="#FF7028"
                             FontSize="16" 
                             Foreground="#7B7B7B"
                             materialDesign:TextFieldAssist.HasFilledTextField="True"
                             materialDesign:TextFieldAssist.TrailingIcon="Eye"
                             PasswordChanged="RepeatPasswordBox_PasswordChanged"
                             Visibility="{Binding IsRepeatPasswordVisible, Converter={StaticResource BoolToVisibilityInvertedConverter}}"/>

                <TextBox x:Name="VisibleRepeatPasswordBox"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Повторите пароль" 
                         materialDesign:HintAssist.Foreground="#7B7B7B"
                         materialDesign:TextFieldAssist.UnderlineBrush="#FF7028"
                         FontSize="16" 
                         Foreground="#7B7B7B"
                         materialDesign:TextFieldAssist.HasFilledTextField="True"
                         materialDesign:TextFieldAssist.TrailingIcon="Eye"
                         Text="{Binding RepeatPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Visibility="{Binding IsRepeatPasswordVisible, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <Button Style="{StaticResource MaterialDesignToolButton}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="30" Height="30"
                        Click="ToggleRepeatPasswordVisibility_Click">
                    <materialDesign:PackIcon Kind="{Binding IsRepeatPasswordVisible, Converter={StaticResource BoolToEyeIconConverter}}"/>
                </Button>
            </Grid>

            <TextBox x:Name="surnameTextBox"
                     materialDesign:HintAssist.Hint="Введите фамилию" 
                     materialDesign:HintAssist.Foreground="#7B7B7B"
                     materialDesign:TextFieldAssist.UnderlineBrush="#FF7028"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="16" 
                     BorderThickness="1"
                     BorderBrush="#7B7B7B"
                     Foreground="#7B7B7B"
                     Margin="80,10,80,10"
                     MaxLength="100"/>

            <TextBox x:Name="nameTextBox"
                     materialDesign:HintAssist.Hint="Введите имя" 
                     materialDesign:HintAssist.Foreground="#7B7B7B"
                     materialDesign:TextFieldAssist.UnderlineBrush="#FF7028"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="16" 
                     BorderThickness="1"
                     BorderBrush="#7B7B7B"
                     Foreground="#7B7B7B"
                     Margin="80,10,80,10"
                     MaxLength="100"/>

            <TextBox x:Name="patronymicTextBox"
                     materialDesign:HintAssist.Hint="Введите отчество (необязательно)" 
                     materialDesign:HintAssist.Foreground="#7B7B7B"
                     materialDesign:TextFieldAssist.UnderlineBrush="#FF7028"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="16" 
                     BorderThickness="1"
                     BorderBrush="#7B7B7B"
                     Foreground="#7B7B7B"
                     Margin="80,10,80,10"
                     MaxLength="100"/>

            <TextBox x:Name="phoneTextBox"
                     materialDesign:HintAssist.Hint="Введите номер телефона" 
                     materialDesign:HintAssist.Foreground="#7B7B7B"
                     materialDesign:TextFieldAssist.UnderlineBrush="#FF7028"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="16" 
                     BorderThickness="1"
                     BorderBrush="#7B7B7B"
                     Foreground="#7B7B7B"
                     Margin="80,10,80,10"
                     MaxLength="11"/>

            <Button x:Name="registrationButton" 
                Content="Регистрация"
                Background="#FF7028"
                Height="44"
                FontSize="16" 
                Click="registrationButton_Click"
                Margin="80,10,80,10"/>

            <Button x:Name="haveAccountButton"
                Content="У меня уже есть аккаунт"
                HorizontalContentAlignment="Left"
                FontSize="15"
                Foreground="#FE5B00"
                Background="Transparent"
                BorderThickness="0"
                Margin="80,10,350,10"
                Click="haveAccountButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
