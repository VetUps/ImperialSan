<Page x:Class="ImperialSanWPF.Views.Pages.MakeOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImperialSanWPF.Views.Pages"
      xmlns:controls="clr-namespace:ImperialSanWPF.Views.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Background="#F2F2F2"
      Title="Оформление заказа">

    <Page.Resources>
        <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="Button">
            <Setter Property="Background" Value="#F2F2F2"/>
            <Setter Property="Foreground" Value="#656B72"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Focusable" Value="False"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF7F2"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="#FF7028"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="600*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="backToBasketButton"
                Click="backToBasketButton_Click"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Content="⭠ Корзина"
                HorizontalAlignment="Left"
                Padding="5, 10, 5, 10"
                Margin="15, 0, 0, 0"
                Height="50"
                BorderThickness="0"
                Background="Transparent"
                Foreground="#FE5B00"
                FontSize="15"/>

        <TextBlock Text="Оформить заказ"
                   Grid.Row="1"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="32"
                   Foreground="#151716"/>

        <Grid Grid.Row="2"
              Grid.Column="1"
              Margin="150 50"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Top">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderThickness="1"
                    BorderBrush="#E3E3E3"
                    Background="White"
                    CornerRadius="4"
                    Margin="0, 0, 45, 0">

                <Grid Margin="30">
                    
                </Grid>

            </Border>

            <Border Grid.Column="1"
                    BorderThickness="1"
                    BorderBrush="#FE5B00"
                    Background="White"
                    CornerRadius="4">

                <Grid Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Состав заказа"
                               FontSize="20"
                               Foreground="#151716"/>

                    <Grid Grid.Row="1"
                          Margin="0, 30, 0, 15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ScrollViewer x:Name="positionsCarousel"
                                      Grid.Column="0"
                                      Grid.Row="0"
                                      HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Hidden"
                                      PreviewMouseWheel="positionsCarousel_PreviewMouseWheel"
                                      Height="70">
                            <ItemsControl ItemsSource="{Binding BasketpositionsForOrder}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <controls:BasketPositionMakeOrderControl/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <Button x:Name="scrollUpButton" 
                                Grid.Column="2"
                                Content="↑" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Top"
                                Click="scrollUpButton_Click" />

                        <Button x:Name="scrollDownButton" 
                                Grid.Column="2"
                                Content="↓" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Bottom"
                                Click="scrollDownButton_Click"/>

                        <ProgressBar x:Name="carouselIndicator"
                                     Grid.Column="1"
                                     Grid.Row="1"
                                     Minimum="0"
                                     Maximum="{Binding BasketpositionsForOrder.Count}"
                                     Value="1"
                                     Height="10"
                                     Margin="5, 0"
                                     BorderBrush="Transparent"
                                     Background="#FFF7F2"
                                     Foreground="#FE5B00"
                                     Orientation="Vertical"/>
                    </Grid>

                    <Border Grid.Row="2"
                            BorderThickness="0, 1, 0, 0"
                            BorderBrush="#ECECEC">

                        <Grid Margin="0, 15, 0, 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Text="К оплате" 
                                       Grid.Column="0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       FontSize="15"
                                       Foreground="#7B7B7B"/>

                            <TextBlock Text="{Binding TotalPirce, StringFormat={}{0:N2} ₽}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       FontSize="24"
                                       Foreground="#151716"
                                       FontWeight="Bold"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
