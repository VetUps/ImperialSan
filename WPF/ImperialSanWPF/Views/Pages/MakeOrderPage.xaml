<Page x:Class="ImperialSanWPF.Views.Pages.MakeOrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ImperialSanWPF.Views.Pages"
      xmlns:controls="clr-namespace:ImperialSanWPF.Views.Controls"
      xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:conv="clr-namespace:ImperialSanWPF.Utils" 
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Background="#F2F2F2"
      Title="Оформление заказа">

    <Page.Resources>
        <conv:OrderStatmentConverter x:Key="OrderStatmentConverter"/>

        <Style x:Key="OrderPageButton" BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="Button">
            <Setter Property="Background" Value="#F2F2F2"/>
            <Setter Property="Foreground" Value="#656B72"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Focusable" Value="False"/>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFF7F2"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="BorderBrush" Value="#FF7028"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style BasedOn="{StaticResource MaterialDesignExpander}" TargetType="Expander">
            <Setter Property="BorderBrush" Value="#FE5B00"/>

            <Style.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="BorderBrush" Value="#656B72"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="600*"/>
            <ColumnDefinition Width="60*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="backToBasketButton"
                Click="backToBasketButton_Click"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Content="⭠ Корзина"
                HorizontalAlignment="Left"
                Padding="5, 10, 5, 10"
                Margin="15, 0, 0, 0"
                Height="50"
                BorderThickness="0"
                Background="Transparent"
                Foreground="#FE5B00"
                FontSize="15"/>

        <TextBlock Text="Оформить заказ"
                   Grid.Row="1"
                   Grid.Column="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="32"
                   Foreground="#151716"/>

        <Grid Grid.Row="2"
              Grid.Column="1"
              Margin="150 50"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Top">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                    BorderThickness="1"
                    BorderBrush="#E3E3E3"
                    Background="White"
                    CornerRadius="4"
                    Margin="0, 0, 45, 0">

                <ScrollViewer Margin="30"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Top"
                              HorizontalScrollBarVisibility="Disabled"
                              VerticalScrollBarVisibility="Auto">

                    <Grid HorizontalAlignment="Stretch"
                          VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Expander Grid.Row="0"
                                  Background="Transparent"
                                  BorderThickness="1"
                                  BorderBrush="#FE5B00">
                            <Expander.Header>
                                <TextBlock Text="Адрес доставки"
                                           FontSize="20"
                                           Foreground="#151716"/>
                            </Expander.Header>
                            <StackPanel Margin="20">
                                <TextBlock Text="Укажите адресс доставки, нажав на карту"
                                           HorizontalAlignment="Center"
                                           FontSize="15"
                                           Foreground="#151716"/>
                                <wv2:WebView2 x:Name="MapWebView" 
                                              Grid.Row="1"
                                              Height="500"
                                              Source="file:///"
                                              WebMessageReceived="MapWebView_WebMessageReceived"/>
                                <TextBlock Text="{Binding CurrentOrder.DiliveryAddress, StringFormat={}Адрес доставки: {0}}"
                                           Margin="0, 10, 0, 0"
                                           HorizontalAlignment="Left"
                                           FontSize="15"
                                           Foreground="#151716"/>
                            </StackPanel>
                        </Expander>

                        <Expander Grid.Row="1"
                                  IsEnabled="{Binding CurrentOrder.DiliveryAddress, 
                                              Converter={StaticResource OrderStatmentConverter}}"
                                  Background="Transparent"
                                  BorderThickness="1"
                                  Margin="0, 15">
                            <Expander.Header>
                                <TextBlock Text="Способ оплаты"
                                           FontSize="20"
                                           Foreground="#151716"/>
                            </Expander.Header>

                            <StackPanel Margin="20, 15">
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="onlinePaymentMethoButton"
                                            Click="PaymentMethoButton_Click"
                                            Content="Онлайн"
                                            Style="{StaticResource OrderPageButton}"/>

                                    <Button x:Name="offlibePaymentMethoButton"
                                            Click="PaymentMethoButton_Click"
                                            Content="Наличными"
                                            Style="{StaticResource OrderPageButton}"
                                            Margin="20, 0, 0, 0"/>
                                </StackPanel>

                                <TextBlock Text="{Binding CurrentOrder.PaymentMethod, StringFormat={}Способ оплаты: {0}}"
                                           Margin="0, 10, 0, 0"
                                           HorizontalAlignment="Left"
                                           FontSize="15"
                                           Foreground="#151716"/>
                            </StackPanel>
                        </Expander>

                        <Expander Grid.Row="2"
                                  IsEnabled="{Binding CurrentOrder.PaymentMethod, 
                                              Converter={StaticResource OrderStatmentConverter}}"
                                  Background="Transparent"
                                  BorderThickness="1"
                                  Margin="0, 15">
                            <Expander.Header>
                                <TextBlock Text="Комментарий к заказу (необязательно)"
                                           FontSize="20"
                                           Foreground="#151716"/>
                            </Expander.Header>

                            <RichTextBox Margin="20"
                                         Height="100"
                                         Style="{StaticResource MaterialDesignFilledRichTextBox}"
                                         materialDesign:TextFieldAssist.UnderlineBrush="Transparent"/>
                        </Expander>

                        <Button x:Name="makeOrderButton" 
                                Click="makeOrderButton_Click"
                                IsEnabled="{Binding CurrentOrder.PaymentMethod, 
                                            Converter={StaticResource OrderStatmentConverter}}"
                                Grid.Row="3"
                                HorizontalAlignment="Left"
                                Content="Оформить заказ"
                                Background="#FF7028"
                                Height="44"
                                FontSize="16" 
                                FontWeight="Bold"/>
                    </Grid>
                </ScrollViewer>

            </Border>

            <Border Grid.Column="1"
                    BorderThickness="1"
                    BorderBrush="#FE5B00"
                    Background="White"
                    CornerRadius="4"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top">

                <Grid Margin="30"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Top">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Состав заказа"
                               FontSize="20"
                               Foreground="#151716"/>

                    <Grid Grid.Row="1"
                          Margin="0, 30, 0, 15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <ScrollViewer x:Name="positionsCarousel"
                                      Grid.Column="0"
                                      Grid.Row="0"
                                      HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Hidden"
                                      PreviewMouseWheel="positionsCarousel_PreviewMouseWheel"
                                      Height="70">
                            <ItemsControl ItemsSource="{Binding BasketpositionsForOrder}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Vertical"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>

                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <controls:BasketPositionMakeOrderControl/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>

                        <Button x:Name="scrollUpButton" 
                                Style="{StaticResource OrderPageButton}"
                                Grid.Column="2"
                                Content="↑" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Top"
                                Click="scrollUpButton_Click" />

                        <Button x:Name="scrollDownButton" 
                                Style="{StaticResource OrderPageButton}"
                                Grid.Column="2"
                                Content="↓" 
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Bottom"
                                Click="scrollDownButton_Click"/>

                        <ProgressBar x:Name="carouselIndicator"
                                     Grid.Column="1"
                                     Grid.Row="1"
                                     Minimum="0"
                                     Maximum="{Binding BasketpositionsForOrder.Count}"
                                     Value="1"
                                     Height="10"
                                     Margin="5, 0"
                                     BorderBrush="Transparent"
                                     Background="#FFF7F2"
                                     Foreground="#FE5B00"
                                     Orientation="Vertical"/>
                    </Grid>

                    <Border Grid.Row="2"
                            BorderThickness="0, 1, 0, 0"
                            BorderBrush="#ECECEC">

                        <Grid Margin="0, 15, 0, 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="К оплате" 
                                       Grid.Column="0"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Top"
                                       FontSize="15"
                                       Foreground="#7B7B7B"/>

                            <TextBlock Text="{Binding TotalPirce, StringFormat={}{0:N2} ₽}"
                                       Grid.Column="1"
                                       HorizontalAlignment="Right"
                                       FontSize="24"
                                       Foreground="#151716"
                                       FontWeight="Bold"/>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
