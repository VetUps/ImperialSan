<UserControl x:Class="ImperialSanWPF.Views.Controls.BasketPositionMakeOrderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImperialSanWPF.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="280">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="56"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image Source="{Binding ImageUrl}"
               Height="56"
               Width="56"
               VerticalAlignment="Top"/>

        <StackPanel Grid.Column="1"
                    Height="70">
            <StackPanel.Resources>
                <Style x:Key="InfoTextBlock" TargetType="TextBlock">
                    <Setter Property="FontSize" Value="15"/>
                    <Setter Property="Foreground" Value="#151716"/>
                    <Setter Property="Margin" Value="10, 0, 0, 0"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="{Binding ProductTitle}"
                       Style="{StaticResource InfoTextBlock}"
                       TextTrimming="CharacterEllipsis"
                       Height="50"
                       TextWrapping="Wrap"/>

            <TextBlock Text="{Binding ProductQuantity, StringFormat={}{0} шт.}"
                       Style="{StaticResource InfoTextBlock}"/>
        </StackPanel>

    </Grid>
</UserControl>
