<UserControl x:Class="ImperialSanWPF.Views.Controllers.ProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImperialSanWPF.Views.Controls"
             xmlns:conv="clr-namespace:ImperialSanWPF.Utils" 
             mc:Ignorable="d" 
             d:DesignHeight="360" 
             d:DesignWidth="260" 
             MouseLeftButtonDown="UserControl_MouseLeftButtonDown"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <conv:RoleVisibilityConverter x:Key="RoleVisibilityConverter"/>
        <conv:RoleEnableStateConverter x:Key="RoleEnableStateConverter"/>
    </UserControl.Resources>

    <Border BorderBrush="#ECECEC" 
            BorderThickness="1">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="66*"/>
                <RowDefinition Height="20*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Image x:Name="productImage"
                   Grid.Row="0"
                   Width="180" 
                   Height="188px"
                   Source="{Binding MainProduct.ImageUrl}"/>

            <TextBlock x:Name="productTitle"
                       Grid.Row="1"
                       Text="{Binding MainProduct.ProductTitle}"
                       FontSize="16"
                       Foreground="#151716"
                       TextTrimming="CharacterEllipsis"
                       MaxWidth="250"
                       MaxHeight="66"
                       TextWrapping="Wrap"
                       Margin="0, 10, 0, 10"/>

            <TextBlock x:Name="productPrice"
                       Text="{Binding MainProduct.Price, StringFormat={}{0} ₽}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#151716"
                       Grid.Row="2"/>

            <StackPanel Grid.Row="3"
                        Orientation="Horizontal" 
                        Margin="0, 5, 0, 0"
                        IsEnabled="{Binding UserRole, 
                                    Converter={StaticResource RoleEnableStateConverter}}"
                        Visibility="{Binding UserRole, 
                                     Converter={StaticResource RoleVisibilityConverter}}">
                <TextBlock Text="Товар активен"
                           FontSize="16"
                           Foreground="#151716"
                           VerticalAlignment="Center"/>

                <ToggleButton IsChecked="{Binding MainProduct.IsActive}"
                              Style="{StaticResource MaterialDesignActionLightToggleButton}"
                              Checked="ProductActive_Checked"
                              Background="#FF7028"
                              Foreground="White"
                              Margin="10,0,0,0"
                              VerticalAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
