<UserControl x:Class="ImperialSanWPF.Views.Controllers.ProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImperialSanWPF.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="360" d:DesignWidth="260" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    <Border BorderBrush="#ECECEC" 
            BorderThickness="1">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="66*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>

            <Image x:Name="productImage"
                   Grid.Row="0"
                   Width="180" 
                   Height="188px"
                   Source="{Binding ImageUrl}"/>

            <TextBlock x:Name="productTitle"
                       Grid.Row="1"
                       Text="{Binding ProductTitle}"
                       FontSize="16"
                       Foreground="#151716"
                       TextTrimming="CharacterEllipsis"
                       MaxWidth="250"
                       MaxHeight="66"
                       TextWrapping="Wrap"
                       Margin="0, 10, 0, 10"/>

            <TextBlock x:Name="productPrice"
                       Text="{Binding Price, StringFormat={}{0} ₽}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#151716"
                       Grid.Row="2"/>
        </Grid>
    </Border>
</UserControl>
