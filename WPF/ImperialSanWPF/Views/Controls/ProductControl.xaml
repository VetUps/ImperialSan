<UserControl x:Class="ImperialSanWPF.Views.Controllers.ProductControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImperialSanWPF.Views.Controllers"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="250" Margin="5" MouseLeftButtonDown="UserControl_MouseLeftButtonDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="66*"/>
            <RowDefinition Height="20*"/>
        </Grid.RowDefinitions>
        
        <Image x:Name="productImage"
               Grid.Row="0"
               Width="180" 
               Height="188px"
               Source="{Binding ImageUrl}"/>

        <TextBlock x:Name="productTitle"
                   Grid.Row="1"
                   Text="{Binding ProductTitle}"
                   TextTrimming="CharacterEllipsis"
                   MaxWidth="250"
                   MaxHeight="66"
                   TextWrapping="Wrap"
                   Margin="0, 10, 0, 10"/>

        <TextBlock x:Name="productPrice"
                   Text="{Binding Price, StringFormat={}{0} ₽}"
                   Grid.Row="2"/>
    </Grid>
</UserControl>
