<UserControl x:Class="ImperialSanWPF.Views.Controls.BasketPositionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImperialSanWPF.Views.Controls"
             xmlns:conv="clr-namespace:ImperialSanWPF.Utils" 
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="1240">

    <UserControl.Resources>
        <conv:StockAvailabilityColorConverter x:Key="StockAvailabilityColorConverter"/>
    </UserControl.Resources>
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image Source="{Binding ImageUrl}"
               Grid.Column="0"
               Height="100"
               Width="100"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"/>


        <StackPanel Grid.Column="1"
                    VerticalAlignment="Center">
            
            <TextBlock Text="{Binding ProductTitle}"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       FontSize="16"
                       Foreground="#151716"
                       Margin="0, 0, 0, 10"/>

            <TextBlock Text="{Binding ProductQuantityInStock, StringFormat={}Доступно: {0} шт.}"
                       VerticalAlignment="Center"
                       TextWrapping="Wrap"
                       FontSize="16">
                
                <TextBlock.Foreground>
                    <MultiBinding Converter="{StaticResource StockAvailabilityColorConverter}">
                        <Binding Path="ProductQuantityInStock"/>
                        <Binding Path="ProductQuantity"/>
                    </MultiBinding>
                </TextBlock.Foreground>
            </TextBlock>

        </StackPanel>

        <Border Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#D9D9D9"
                BorderThickness="1">
            <StackPanel Orientation="Horizontal">

                <TextBlock x:Name="reduceBasketPosition"
                           PreviewMouseLeftButtonDown="reduceBasketPosition_PreviewMouseLeftButtonDown"
                           Style="{StaticResource TextBlockButtonsHover}"
                           Cursor="Hand"
                           VerticalAlignment="Center"
                           Text="-"
                           FontSize="32"
                           Padding="15, 0, 15, 7"/>

                <TextBlock Text="{Binding ProductQuantity}"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#151716"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="increaseBasketPosition"
                           PreviewMouseLeftButtonDown="increaseBasketPosition_PreviewMouseLeftButtonDown"
                           Style="{StaticResource TextBlockButtonsHover}"
                           Cursor="Hand"
                           VerticalAlignment="Center"
                           Text="+"
                           FontSize="32"
                           Padding="15, 0, 15, 7"/>

            </StackPanel>
        </Border>

        <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N2} ₽}"
                   Grid.Column="3"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="#151716"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
    </Grid>
</UserControl>
