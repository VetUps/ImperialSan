<UserControl x:Class="ImperialSanWPF.Views.Controls.BasketPositionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImperialSanWPF.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="1240">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Image Source="{Binding ImageUrl}"
               Grid.Column="0"
               HorizontalAlignment="Center"
               VerticalAlignment="Center"/>

        <TextBlock Text="{Binding ProductTitle}"
                   Grid.Column="1"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"
                   FontSize="16"
                   Foreground="#151716"/>

        <Border Grid.Column="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#D9D9D9"
                BorderThickness="1">
            <StackPanel Orientation="Horizontal">

                <TextBlock x:Name="reduceBasketPosition"
                           PreviewMouseLeftButtonDown="reduceBasketPosition_PreviewMouseLeftButtonDown"
                           Cursor="Hand"
                           VerticalAlignment="Center"
                           Text="-"
                           FontSize="32"
                           Padding="15, 0, 15, 7"
                           Foreground="#C2C2C2"/>

                <TextBlock Text="{Binding ProductQuantity}"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="#151716"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>

                <TextBlock x:Name="increaseBasketPosition"
                        PreviewMouseLeftButtonDown="increaseBasketPosition_PreviewMouseLeftButtonDown"
                        Cursor="Hand"
                        VerticalAlignment="Center"
                        Text="+"
                        FontSize="32"
                        Padding="15, 0, 15, 7"
                        Foreground="#C2C2C2"/>

            </StackPanel>
        </Border>

        <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N2} ₽}"
                   Grid.Column="3"
                   FontSize="16"
                   FontWeight="Bold"
                   Foreground="#151716"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
    </Grid>
</UserControl>
