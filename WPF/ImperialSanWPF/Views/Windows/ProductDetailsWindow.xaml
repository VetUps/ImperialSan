<Window x:Class="ImperialSanWPF.Views.Windows.ProductDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImperialSanWPF.Views.Windows"
        mc:Ignorable="d"
        Title="{Binding ProductTitle}" 
        Icon="{Binding ImageUrl}"
        Height="450" 
        Width="750">

    <Window.Resources>
        <Style x:Key="DescriptionTextBlock" 
               TargetType="TextBlock">
            <Setter Property="Foreground" Value="#7B7B7B"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>

        <Style x:Key="ProductPropertyTextBlock" 
               TargetType="TextBlock">
            <Setter Property="Foreground" Value="#151716"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </Window.Resources>
    <Grid ShowGridLines="False">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="28*"/>
            <ColumnDefinition Width="251*"/>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="439*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="50*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>

        <Image x:Name="productImage" 
               Grid.Row="1" 
               Grid.Column="1" 
               Source="{Binding ImageUrl}"
               Height="250" 
               Width="250"/>

        <Grid Grid.Row="1" 
              Grid.Column="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="90"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="25"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="productTitleTextBlock"
                       Grid.Row="0"
                       Grid.ColumnSpan="2"
                       Text="{Binding ProductTitle}"
                       TextWrapping="Wrap"
                       Foreground="#151716"
                       FontSize="20"/>

            <TextBlock Text="Количество на складе"
                       Style="{StaticResource DescriptionTextBlock}"
                       Grid.Row="1"
                       Grid.Column="0"/>
            <TextBlock x:Name="productQuantityInStockTextBlock"
                       Style="{StaticResource ProductPropertyTextBlock}"
                       Text="{Binding QuantityInStock}"
                       Grid.Row="1"
                       Grid.Column="1"/>

            <TextBlock Text="Бренд"
                       Style="{StaticResource DescriptionTextBlock}"
                       Grid.Row="2"
                       Grid.Column="0"/>
            <TextBlock x:Name="productBrandTitleTextBlock"
                       Style="{StaticResource ProductPropertyTextBlock}"
                       Text="{Binding BrandTitle}"
                       Grid.Row="2"
                       Grid.Column="1"/>

            <TextBlock Text="Описание"
                       Style="{StaticResource DescriptionTextBlock}"
                       Grid.Row="3"
                       Grid.ColumnSpan="2"/>

            <ScrollViewer Grid.Row="4"
                          Grid.ColumnSpan="2"
                          VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="productDescriptionTextBlock"
                           Style="{StaticResource ProductPropertyTextBlock}"
                           Text="{Binding ProductDescription}"
                           TextWrapping="Wrap" />
            </ScrollViewer>
        </Grid>

        <Grid Grid.Row="3"
              Grid.Column="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="170*"/>
                <ColumnDefinition Width="65*"/>
                <ColumnDefinition Width="205*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="productPriceTextBlock"
                       Text="{Binding Price, StringFormat={}{0:N2} ₽}"
                       Grid.Column="0"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#151716"/>

            <Button x:Name="addToBasketButton"
                    Grid.Column="2"
                    Click="addToBasketButton_Click"
                    Content="Добавить в корзину"/>
        </Grid>
    </Grid>
</Window>
